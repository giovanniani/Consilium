@model Consilium.Models.Extended.VerComision
@{
    ViewBag.Title = "Crear";
}

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Consilium - Miembros del Consejo</title>
    <link href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <link href="~/Content/bootstrap.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/maquetacion.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/encabezado.css" rel="stylesheet" type="text/css" />
    <link rel="stylesheet" href="~/Content/w3.css">
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
    <style>

        #formatoTabla {
            font-family: "Trebuchet MS", Arial, Helvetica, sans-serif;
            border-collapse: collapse;
            width: 100%;
        }

            #formatoTabla td, #formatoTabla th {
                border: 1px solid #ddd;
                padding: 8px;
            }

            #formatoTabla tr:nth-child(even) {
                background-color: #f2f2f2;
            }

            #formatoTabla tr:hover {
                background-color: #ddd;
            }

            #formatoTabla th {
                padding-top: 12px;
                padding-bottom: 12px;
                text-align: left;
                background-color: #000000;
                color: white;
            }
    </style>

</head>

<body>
    @if (HttpContext.Current.User.Identity.Name != "")
    {
        <div id="contenedorVistaParcial">@Html.Partial("_encabezado")</div>
        <div id="content-container1">
            <div id="content-container2">
                <div id="content">
                    <div style="position: absolute; left: 70%; top: 50%; ">
                        <img src="~/Content/fondo_logo_ic_grande.png" class="pruebaLogo" />
                    </div>
                    <br /> <br />
                    <h2 style="text-align: center; color:#222222; padding-left:4em; font-family:Arial;font-weight:bolder; width:70% ">Comisión del punto: @Model.comision.Punto.titulo</h2>
                    @if (ViewBag.Status != null && Convert.ToBoolean(ViewBag.Status))
                    {
                        <div class="alert alert-success col-md-6">
                            <strong> ¡La operación se realizó con éxito!</strong>@ViewBag.Message
                        </div>
                    }
                    else
                    {
                        using (Html.BeginForm())
                        {
                            @Html.AntiForgeryToken()
                        <div class="form-horizontal " style="color:#222222; font-size: 14px; font-weight:lighter;font-family:Verdana, Geneva, Tahoma, sans-serif">
                            <hr style="height:2px;width: 90% ;border:none;color:#333;background-color:#333;" />
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            <div class="form-group">
                                @Html.LabelFor(model => model.comision.nombre, "Nombre", htmlAttributes: new { @class = "control-label col-md-4" })
                                <div class="col-md-3">
                                    @Html.EditorFor(model => model.comision.nombre, new { htmlAttributes = new { @class = "form-control", @disabled = "disabled" } })
                                    @Html.ValidationMessageFor(model => model.comision.nombre, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(model => model.comision.objetivo, "Objetivo", htmlAttributes: new { @class = "control-label col-md-4" })
                                <div class="col-md-3">
                                    @Html.EditorFor(model => model.comision.objetivo, new { htmlAttributes = new { @class = "form-control", @disabled = "disabled" } })
                                    @Html.ValidationMessageFor(model => model.comision.objetivo, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(model => model.comision.Punto.titulo, "Título", htmlAttributes: new { @class = "control-label col-md-4" })
                                <div class="col-md-3">
                                    @Html.EditorFor(model => model.comision.Punto.titulo, new { htmlAttributes = new { @class = "form-control", @disabled = "disabled" } })
                                    @Html.ValidationMessageFor(model => model.comision.Punto.titulo, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(model => model.comision.idSesion, "Sesión", htmlAttributes: new { @class = "control-label col-md-4" })
                                <div class="col-md-3">
                                    @Html.EditorFor(model => model.comision.idSesion, new { htmlAttributes = new { @class = "form-control", @disabled = "disabled" } })
                                    @Html.ValidationMessageFor(model => model.comision.idSesion, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(model => model.comision.fechaFin, "F. Fin", htmlAttributes: new { @class = "control-label col-md-4" })
                                <div class="col-md-3">

                                    @Html.EditorFor(model => model.comision.fechaFin, new { htmlAttributes = new { @class = "form-control", @disabled = "disabled" } })
                                    @Html.ValidationMessageFor(model => model.comision.fechaFin, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(model => model.comision.fechaIni, "F. Inicio", htmlAttributes: new { @class = "control-label col-md-4" })
                                <div class="col-md-3">
                                    @Html.EditorFor(model => model.comision.fechaIni, new { htmlAttributes = new { @class = "form-control", @disabled = "disabled" } })
                                    @Html.ValidationMessageFor(model => model.comision.fechaIni, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <hr style="height:1px;width: 90% ;border:none;color:lightgray;background-color:lightgray;" />
                            <u><h3 style="text-align: center; color:#222222; padding-left:4em; font-family:Arial;font-weight:bolder ; width:70% ">Miembros de la comisión</h3></u>
                            <div class="form-horizontal" style="color:#222222; font-size: 14px; font-weight:lighter;font-family:Verdana, Geneva, Tahoma, sans-serif;  position:relative; left:0; width:95%; overflow-x:auto;overflow-y:scroll;height: 30%">
                                <table class="table" id="formatoTabla">
                                    <tr>
                                        <th>
                                            Nombre
                                        </th>
                                        <th>
                                            Apellido paterno
                                        </th>
                                        <th>
                                            Apellido materno
                                        </th>
                                    </tr>
                                    @foreach (var item in Model.miembros)
                                    {
                                        <tr>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Usuario.nombre)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Usuario.apellidoP)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Usuario.apellidoM)
                                            </td>
                                        </tr>
                                    }
                                </table>
                            </div>
                            <div class="form-group">
                                <div>
                                    @Html.ActionLink("   >>> Regresar <<<", "Index")
                                </div>
                            </div>

                        </div>

                            if (ViewBag.Message != null)
                            {
                                <div class="alert alert-danger col-md-6">
                                    <strong>¡Error!  </strong>@ViewBag.Message
                                </div>
                            }

                        }

                    }
                    <br /> <br /><br />
                </div>
            </div>
        </div>


        string[] data = HttpContext.Current.User.Identity.Name.Split('&');
        <div id="navigation-container">
            <div id="navigation">
                @if (data[2] == "0")
                {
                    @Html.Partial("_menuSecretaria")
                }
                else if (data[2] == "1")
                {
                    @Html.Partial("_menuPresidente")
                }
            </div>
        </div>
    }
    else
    {
        <div id="contenedorVistaParcial">@Html.Partial("_noAutorizado")</div>
    }


</body>