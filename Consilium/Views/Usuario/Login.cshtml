@model Consilium.Models.UserLogin
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Consilium - Inicio de sesión</title>
    <link href="~/Content/login.css" rel="stylesheet" type="text/css" />
    <link rel="stylesheet" href="~/Content/w3.css">
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
    <style type="text/css">
        html {
            overflow-y: hidden;
            overflow-x: hidden;
            overflow: hidden;
        }
    </style>
</head>
@{
    ViewBag.Title = "Inicio de sesión";
}





@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="fondo">


        <br />
        <br />

        <div style="position: absolute; left: 100px; top: 35%; ">
            <img src="~/Content/logo_consilium_extendido.png" class="pruebaLogo" />
        </div>


        <div class="posicion_login">
            <div class="container">
                <div class="form-horizontal " align="center">
                    <h4> </h4>


                    <div style="position:absolute ;width: 50%; height:50%; left: 100px; top: 0; ">

                        <br />
                        <br />
                        <img src="~/Content/logo_ic.png" />

                    </div>



                    <br />
                    <br />
                    <br />
                    <br />
                    <br />
                    <br />
                    <br />
                    <br />
                    <h2 style="text-align: center;">Inicio de sesión</h2>

                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group">


                        @Html.LabelFor(model => model.idUsuario, "Usuario", htmlAttributes: new { @class = "control-label col-md-2  col-md-push-3" })
                        <div class="col-md-2 col-md-push-3">
                            @Html.EditorFor(model => model.idUsuario, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.idUsuario, "", new { @class = "login" })
                            <br />
                            <br />
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.contrasenna, "Contraseña", htmlAttributes: new { @class = "control-label col-md-2 col-md-push-3" })
                        <div class="col-md-2 col-md-push-3">
                            @Html.EditorFor(model => model.contrasenna, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.contrasenna, "", new { @class = "text-danger" })
                            <br />
                            <br />
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-2 col-md-push-3">
                            <div class="checkbox">
                                @Html.EditorFor(model => model.RememberMe)
                                @Html.ValidationMessageFor(model => model.RememberMe, "Recordar usuario", new { @class = "text-danger" })
                                <br />
                                <br />
                            </div>
                        </div>
                    </div>

                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Ingresar" class="w3-button w3-white w3-border" />

                    </div>
                </div>

            </div>
        </div>
    </div>

}


@section Scripts{
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
}
